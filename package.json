{
	"name": "rewards-new",
	"version": "2.0.0",
	"description": "CIAYO Rewards 2.0 experimental recoding. Using Next.js 7 for SSR & SEO Support",
	"main": "index.js",
	"scripts": {
		"dev": "node server.js",
		"build": "next build",
		"start": "NODE_ENV=production node server.js",
		"immutable-start": "npm run build && npm start",
		"test": "NODE_ENV=test jest --watch"
	},
	"repository": {
		"type": "git",
		"url": "git@git.dragoncapital.center:frontend/rewards-new.git"
	},
	"engines": {
		"node": "9.11.2",
		"npm": "5.6.0"
	},
	"keywords": [
		"ciayo",
		"comics",
		"ciayocom",
		"ciayocorp",
		"ciayorewards"
	],
	"author": "Ervandra Halim <ervandra.halim@gmail.com>",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.18.1",
		"acorn": "^6.3.0",
		"ajv": "^6.9.2",
		"babel-core": "7.0.0-bridge.0",
		"babel-plugin-styled-components": "1.7.1",
		"core-js": "^2.5.7",
		"dotenv": "6.1.0",
		"dotenv-webpack": "1.5.7",
		"enzyme": "3.7.0",
		"enzyme-adapter-react-16": "1.6.0",
		"express": "4.16.4",
		"lodash.debounce": "4.0.8",
		"next": "^11.1.0",
		"next-redux-wrapper": "^4.0.1",
		"next-routes": "1.4.2",
		"nookies": "^2.0.8",
		"nprogress": "0.2.0",
		"path": "^0.12.7",
		"prop-types": "15.6.2",
		"react": "^16.8.6",
		"react-device-detect": "^1.6.2",
		"react-dom": "^16.8.6",
		"react-modal": "^3.8.1",
		"react-moment": "^0.8.2",
		"react-redux": "^7.1.3",
		"react-reveal": "^1.2.2",
		"react-share": "^2.3.1",
		"react-simple-share": "^0.1.2",
		"react-slick": "^0.23.2",
		"react-typed": "^1.1.0",
		"redux": "^4.0.4",
		"redux-devtools-extension": "^2.13.8",
		"redux-thunk": "^2.3.0",
		"serve-favicon": "^2.5.0",
		"styled-components": "4.0.2",
		"styled-react-modal": "^1.1.2",
		"verge": "^1.10.2"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.1",
		"babel-jest": "^25.0.0",
		"babel-plugin-module-resolver": "^3.1.1",
		"casual": "^1.5.19",
		"enzyme-to-json": "^3.3.4",
		"eslint": "^5.7.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-prettier": "^3.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-prettier": "^3.0.0",
		"eslint-plugin-react": "^7.11.1",
		"eslint-plugin-react-hooks": "^2.2.0",
		"jest": "^25.0.0",
		"prettier": "^1.14.3"
	},
	"jest": {
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"<rootDir>/.next/",
			"<rootDir>/node_modules/"
		],
		"transform": {
			".*": "babel-jest"
		}
	},
	"babel": {
		"env": {
			"development": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"production": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"test": {
				"presets": [
					[
						"next/babel",
						{
							"preset-env": {
								"modules": "commonjs"
							}
						}
					]
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			}
		}
	}
}
